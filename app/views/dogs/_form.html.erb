<%= simple_form_for @dog do |f| %>
  <%= f.input :name %>
  <%= f.input :description, as: :text %>
  <%= f.file_field :image, as: :file, accept: "image/*", multiple: true%>

  <% if @dog.images.any? %>
      <% for dog_image in @dog.images %>
        <%= image_tag dog_image %>
      <% end %>
    
  <% end %>

  <%= f.button :submit %>
<% end %>
