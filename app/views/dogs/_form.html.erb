<%= simple_form_for @dog do |f| %>
  <%= f.input :name %>
  <%= f.input :description, as: :text %>
  <%= f.fields_for :images do |i| %>
    <%= i.input :image, as: :file %>
  <% end %>

  <%= f.input :user_id, :as => :hidden,
                        :input_html => { :value => current_user.id } %>


  <%= f.button :submit %>

  <% if @dog.images.any? %>
    <% @dog.images.each do |i| %>
      <%= image_tag i, size: 500 %>
    <% end %>
  <% end %>

<% end %>
